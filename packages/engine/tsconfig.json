{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"es2015",
			"es2016",
			"es2017"
		],
		"strict": true,
		"allowJs": false,
		"sourceMap": false,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDeclarationOnly": false,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"./src"
	]
}
